# === ADVANCED ===
# Enable true color support (24-bit color)
term = xterm-256color

# Auto-update check
auto-update = check

# Quit behavior
quit-after-last-window-closed = true
confirm-close-surface = false

# === OPENCODE SPECIFIC ===
# These environment variables ensure OpenCode renders properly
# NOTE: Ghostty doesn't support custom env vars in config
