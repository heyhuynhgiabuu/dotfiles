# Ghostty Configuration
# Converted from Wezterm config for OpenCode compatibility

# === THEME & APPEARANCE ===
theme = Tokyo Night
background-opacity = 0.85
background-blur-radius = 25

# === FONT CONFIGURATION ===
font-family = JetBrains Mono
font-size = 16

# Font features for better rendering
font-feature = -calt
font-feature = -liga

# === WINDOW SETTINGS ===
window-decoration = false
window-padding-x = 4
window-padding-y = 4
window-padding-balance = true

# macOS specific
macos-titlebar-style = tabs
macos-option-as-alt = true

# === PERFORMANCE ===
# Ghostty is already optimized for TUI apps
# These are the defaults but explicitly set for clarity
resize-overlay = never
mouse-hide-while-typing = true

# === CURSOR ===
cursor-style = block
cursor-style-blink = true

# === COLORS (Tokyo Night theme colors) ===
# These match your Wezterm Tokyo Night theme
