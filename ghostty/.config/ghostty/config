# === KEYBINDINGS ===
# Most macOS defaults work out of box in Ghostty
# Only add custom ones if needed

# Copy/Paste (already work by default)
# keybind = cmd+c=copy_to_clipboard
# keybind = cmd+v=paste_from_clipboard

# New tab/window (already work by default)
# keybind = cmd+t=new_tab
# keybind = cmd+n=new_window

# Close tab/window
keybind = cmd+w=close_surface

# Clear screen (like Wezterm's Cmd+K)
keybind = cmd+k=clear_screen

# === SCROLLBACK ===
scrollback-limit = 10000

# === CLIPBOARD ===
clipboard-read = allow
clipboard-write = allow
