{
  "theme": "kanagawa",
  "keybinds": {
    "leader": "ctrl+x",
    "app_help": "<leader>h",
    "app_exit": "ctrl+c,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "project_init": "<leader>i",
    "tool_details": "<leader>d",
    "thinking_blocks": "<leader>b",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_timeline": "<leader>g",
    "session_share": "<leader>s",
    "session_unshare": "none",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "session_child_cycle": "ctrl+]",
    "session_child_cycle_reverse": "ctrl+\\",
    "messages_page_up": "ctrl+u",
    "messages_page_down": "ctrl+d",
    "messages_half_page_up": "ctrl+alt+u",
    "messages_half_page_down": "ctrl+alt+d",
    "messages_first": "ctrl+g",
    "messages_last": "ctrl+alt+g",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "model_list": "<leader>m",
    "model_cycle_recent": "f2",
    "model_cycle_recent_reverse": "shift+f2",
    "agent_list": "<leader>a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "enter",
    "input_newline": "shift+enter,ctrl+j",
    "switch_mode": "none",
    "switch_mode_reverse": "none",
    "switch_agent": "tab",
    "switch_agent_reverse": "shift+tab",
    "file_list": "none",
    "file_close": "none",
    "file_search": "none",
    "file_diff_toggle": "none",
    "messages_previous": "none",
    "messages_next": "none",
    "messages_layout_toggle": "none",
    "messages_revert": "none"
  },
  "tui": {
    "scroll_speed": 3
  },
  "share": "manual",
  "autoupdate": false,
  "model": "anthropic/claude-sonnet-4-5-20250929",
  "small_model": "zai-coding-plan/glm-4.5",
  "tools": {
    "context7*": true,
    "exa*": true
  },
  "agent": {
    "build": {
      "model": "anthropic/claude-sonnet-4-5-20250929",
      "temperature": 0.1,
      "description": "Primary agent for deep analysis, architecture decisions, and intelligent workflow orchestration with advanced reasoning capabilities",
      "mode": "primary",
      "prompt": "{file:./base-prompt.md}"
    },
    "zai": {
      "model": "zai-coding-plan/glm-4.6",
      "temperature": 0.1,
      "description": "Primary agent for deep analysis, architecture decisions, and intelligent workflow orchestration with advanced reasoning capabilities",
      "mode": "primary",
      "prompt": "{file:./base-prompt.md}"
    }
  },
  "provider": {
    "zai-coding-plan": {
      "npm": "@ai-sdk/anthropic",
      "options": {
        "baseURL": "https://api.z.ai/api/anthropic/v1"
      },
      "models": {
        "glm-4.6": {
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "tool_call": true,
          "release_date": "2025-09-30",
          "cost": {
            "input": 0,
            "output": 0,
            "cache_read": 0,
            "cache_write": 0
          },
          "options": {
            "thinking": {
              "type": "enabled"
            },
            "max_tokens": 16000
          },
          "limit": {
            "context": 204800,
            "output": 131072
          }
        }
      }
    },
    "anthropic": {
      "models": {
        "claude-sonnet-4-5-20250929": {
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "tool_call": true,
          "release_date": "2025-09-29",
          "cost": {
            "input": 3,
            "output": 15,
            "cache_read": 0.3,
            "cache_write": 3.75
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          },
          "limit": {
            "context": 200000,
            "output": 64000
          }
        },
        "claude-sonnet-4-20250514": {
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "tool_call": true,
          "release_date": "2025-05-22",
          "cost": {
            "input": 3,
            "output": 15,
            "cache_read": 0.3,
            "cache_write": 3.75
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          },
          "limit": {
            "context": 200000,
            "output": 64000
          }
        },
        "claude-opus-4-1-20250805": {
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "tool_call": true,
          "release_date": "2025-08-05",
          "cost": {
            "input": 15,
            "output": 75,
            "cache_read": 1.5,
            "cache_write": 18.75
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          },
          "limit": {
            "context": 200000,
            "output": 32000
          }
        }
      }
    },
    "github-copilot": {
      "api": "https://api.individual.githubcopilot.com",
      "models": {
        "gpt-5-codex": {
          "provider": {
            "npm": "@ai-sdk/openai"
          }
        },
        "gpt-5": {
          "options": {
            "reasoningEffort": "high",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        },
        "gpt-5-mini": {
          "options": {
            "reasoningEffort": "medium",
            "textVerbosity": "low",
            "reasoningSummary": "auto",
            "include": ["reasoning.encrypted_content"]
          }
        },
        "claude-sonnet-4": {
          "attachment": true,
          "reasoning": true,
          "temperature": true,
          "tool_call": true,
          "release_date": "2025-05-22",
          "cost": {
            "input": 0,
            "output": 0,
            "cache_read": 0,
            "cache_write": 0
          },
          "options": {
            "thinking": {
              "type": "enabled",
              "budgetTokens": 16000
            }
          },
          "limit": {
            "context": 128000,
            "output": 16000
          }
        }
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"],
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "2000"
      },
      "enabled": true
    },
    "exa": {
      "type": "remote",
      "url": "https://mcp.exa.ai/mcp?enabledTools=%5B%22get_code_context_exa%22%2C%22web_search_exa%22%5D",
      "headers": {
        "Remove-Me": "Disable web_search_exa tool if you're just coding. To 100% call exa-code, say 'use exa-code'.",
        "EXA_API_KEY": "{env:EXA_API_KEY}"
      },
      "enabled": true
    }
  },
  "formatter": {
    "prettier": {
      "command": ["npx", "prettier", "--write", "$FILE"],
      "extensions": [
        ".js",
        ".jsx",
        ".ts",
        ".tsx",
        ".html",
        ".css",
        ".scss",
        ".sass",
        ".md",
        ".json",
        ".yaml",
        ".yml"
      ]
    },
    "java-formatter": {
      "command": ["google-java-format", "--replace", "$FILE"],
      "environment": {
        "JAVA_HOME": "/Users/killerkidbo/.sdkman/candidates/java/current"
      },
      "extensions": [".java"]
    }
  },
  "lsp": {
    "typescript": { "disabled": true },
    "eslint": { "disabled": true },
    "gopls": { "disabled": true },
    "jdtls": { "disabled": true },
    "lua": { "disabled": true },
    "bash": { "disabled": true },
    "marksman": { "disabled": true },
    "json": { "disabled": true },
    "yaml": { "disabled": true },
    "ruby-lsp": { "disabled": true }
  },
  "permission": {
    "edit": "allow",
    "bash": {
      "ls": "allow",
      "ls -l": "allow",
      "ls -la": "allow",
      "tree": "allow",
      "cat": "allow",
      "head": "allow",
      "tail": "allow",
      "less": "allow",
      "more": "allow",
      "git status": "allow",
      "git diff": "allow",
      "git log": "allow",
      "git branch": "allow",
      "git remote -v": "allow",
      "uname -a": "allow",
      "df -h": "allow",
      "ps aux": "allow",
      "env": "allow",
      "uptime": "allow",
      "ping": "allow",
      "ifconfig": "allow",
      "netstat -an": "allow",
      "which": "allow",
      "whereis": "allow",
      "history": "allow",
      "uvx": "allow",
      "uvx --from git+https://github.com/github/spec-kit.git*": "allow"
    }
  },
  "$schema": "https://opencode.ai/config.json"
}
