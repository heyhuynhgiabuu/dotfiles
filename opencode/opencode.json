{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "github-copilot/gpt-4.1",
  "share": "disabled",
  "autoshare": false,
  "autoupdate": true,
  "instructions": [],
  "agent": {
    "security-audit": {
      "description": "Security scan for backend code and configs",
      "model": "github-copilot/claude-sonnet-4",
      "prompt": "{file:agent/security-audit.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "todowrite": false
      }
    },
    "devops-deployer": {
      "description": "Docker and infrastructure optimization",
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:agent/devops-deployer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "webfetch": false,
        "todowrite": false
      }
    },
    "api-reviewer": {
      "description": "Backend API performance and architecture review",
      "model": "github-copilot/claude-sonnet-4",
      "prompt": "{file:agent/api-reviewer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "todowrite": false
      }
    },
    "docs-writer": {
      "description": "Essential developer documentation",
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:agent/docs-writer.md}",
      "tools": {
        "bash": false,
        "webfetch": false,
        "todowrite": false
      }
    },
    "backend-troubleshooter": {
      "description": "Debug backend issues and analyze logs",
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:agent/backend-troubleshooter.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "todowrite": false
      }
    },
    "simple-researcher": {
      "description": "Find code examples when searches fail",
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:agent/simple-researcher.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "todowrite": false
      }
    },
    "context-analyst": {
      "description": "Analyze OpenCode context and billing",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.2,
      "prompt": "{file:agent/context_analyst.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "todowrite": false
      }
    },
    "session-summarizer": {
      "description": "Create conversation summaries",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.2,
      "prompt": "{file:agent/session-summarizer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "todowrite": false
      }
    }
  },
  "mode": {
    "dev": {
      "description": "Primary development mode with GPT-4.1 (Free)",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.2,
      "prompt": "{file:prompts/dev-prompt.md}"
    },
    "build": {
      "description": "Large codebase mode with 2M context",
      "model": "github-copilot/gemini-2.5-pro",
      "temperature": 0.2,
      "prompt": "{file:prompts/build-prompt.md}",
      "tools": {
        "todowrite": false,
        "todoread": false
      }
    },
    "enhanced": {
      "description": "Critical reasoning with Claude Sonnet 4",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.2,
      "prompt": "{file:prompts/enhanced-prompt.md}",
      "tools": {
        "todowrite": false,
        "todoread": false
      }
    },
    "plan": {
      "description": "Read-only analysis and planning",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.2,
      "prompt": "{file:prompts/plan-prompt.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true,
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "2000"
      }
    },
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena-mcp-server", "--context", "ide-assistant", "--project", "$(pwd)", "--dashboard", "true"],
      "enabled": false,
      "environment": {
        "SERENA_READ_ONLY": "true"
      }
    },
    "docker-mcp-toolkit": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": false,
      "environment": {
        "MCP_GITHUB_OAUTH": "true"
      }
    },
    "git-context": {
      "type": "remote",
      "url": "https://gitmcp.io/heyhuynhgiabuu/dotfiles"
    }
  }
}
