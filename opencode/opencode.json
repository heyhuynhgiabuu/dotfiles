{
  "$schema": "https://opencode.ai/config.json",
  "theme": "opencode",
  "model": "github-copilot/gemini-2.5-pro",
  "share": "disabled",
  "autoshare": false,
  "autoupdate": true,
  "instructions": [
    "AGENTS.md",
    "prompts/global-assistant.md"
  ],
  "agent": {
    "security-audit": {
      "description": "Quick security scan for backend code. Finds common vulns and compliance issues.",
      "model": "github-copilot/claude-sonnet-4",
      "prompt": "{file:agent/security-audit.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "todowrite": false,
        "todoread": false
      }
    },
    "devops-deployer": {
      "description": "Docker, deployments, and infrastructure helper. Minimal and secure configs only.",
      "model": "github-copilot/gemini-2.5-pro",
      "prompt": "{file:agent/devops-deployer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "webfetch": false,
        "todowrite": false,
        "todoread": false
      }
    },
    "api-reviewer": {
      "description": "Backend API code review focused on performance, security, and clean architecture.",
      "model": "github-copilot/claude-sonnet-4",
      "prompt": "{file:agent/api-reviewer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "todowrite": false,
        "todoread": false
      }
    },
    "docs-writer": {
      "description": "Essential docs only. Short, practical, developer-friendly.",
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:agent/docs-writer.md}",
      "tools": {
        "bash": false,
        "webfetch": false,
        "todowrite": false,
        "todoread": false
      }
    },
    "backend-troubleshooter": {
      "description": "Debug backend issues and analyze logs. Quick, actionable solutions.",
      "model": "github-copilot/gpt-4.1",
      "prompt": "{file:agent/backend-troubleshooter.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "todowrite": false,
        "todoread": false
      }
    },
    "simple-researcher": {
      "description": "Find code examples and solutions when obvious searches fail.",
      "model": "github-copilot/gemini-2.5-pro",
      "prompt": "{file:agent/simple-researcher.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "todowrite": false,
        "todoread": false
      }
    },
    "context-analyst": {
      "description": "Analyze OpenCode context management, caching, and billing integration.",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.2, 
      "prompt": "{file:agent/context_analyst.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": true,
        "todowrite": false,
        "todoread": false
      }
    },
    "session-summarizer": {
      "description": "Create concise, actionable conversation summaries for OpenCode sessions.",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.2,
      "prompt": "{file:agent/session-summarizer.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "webfetch": false,
        "todowrite": false,
        "todoread": false
      }
    }
  },
  "mode": {
    "build": {
      "description": "Full development mode with write access",
      "model": "github-copilot/gemini-2.5-pro",
      "temperature": 0.3,
      "prompt": "{file:AGENTS.md}",
      "tools": {
        "webfetch": true,
        "todowrite": true,
        "todoread": true
      }
    },
    "plan": {
      "description": "Restricted mode for planning and analysis.",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.2,
      "prompt": "{file:AGENTS.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "webfetch": true,
        "todowrite": true,
        "todoread": true
      }
    },
    "daily": {
      "description": "Daily development mode with full access using GPT-4.1 (Copilot Education).",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.3,
      "prompt": "{file:AGENTS.md}",
      "tools": {
        "webfetch": true,
        "todowrite": true,
        "todoread": true
      }
    },
    "review": {
      "description": "Code review mode - read-only analysis.",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.2,
      "prompt": "{file:AGENTS.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "webfetch": true,
        "todowrite": false,
        "todoread": false
      }
    },
    "security": {
      "description": "Security-focused analysis mode.",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.1,
      "prompt": "{file:AGENTS.md}",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false,
        "patch": false,
        "webfetch": true,
        "todowrite": false,
        "todoread": false
      }
    },
    "debug": {
      "description": "Debugging and troubleshooting mode.",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.2,
      "prompt": "{file:AGENTS.md}",
      "tools": {
        "write": false,
        "edit": false,
        "patch": false,
        "webfetch": true,
        "todowrite": true,
        "todoread": true
      }
    },
    "docs": {
      "description": "Documentation writing mode.",
      "model": "github-copilot/gpt-4.1",
      "temperature": 0.4,
      "prompt": "{file:AGENTS.md}",
      "tools": {
        "bash": false,
        "patch": false,
        "webfetch": true,
        "todowrite": true,
        "todoread": true
      }
    },
    "enhanced": {
      "description": "Enhanced mode with comprehensive expertise and autonomous operation",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.3,
      "prompt": "{file:prompts/global-assistant.md}",
      "tools": {
        "webfetch": true,
        "todowrite": true,
        "todoread": true
      }
    },
    "dotfiles": {
      "description": "Specialized dotfiles development mode",
      "model": "github-copilot/claude-sonnet-4",
      "temperature": 0.3,
      "prompt": "{file:prompts/enhanced-development-assistant.md}",
      "tools": {
        "webfetch": true,
        "todowrite": true,
        "todoread": true
      }
    }
  },
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp@latest"],
      "enabled": true,
      "environment": {
        "DEFAULT_MINIMUM_TOKENS": "2000"
      }
    },
    "serena": {
      "type": "local",
      "command": ["uvx", "--from", "git+https://github.com/oraios/serena", "serena-mcp-server", "--context", "ide-assistant", "--project", "$(pwd)", "--dashboard", "true"],
      "enabled": false,
      "environment": {
        "SERENA_READ_ONLY": "true"
      }
    },
    "docker-mcp-toolkit": {
      "type": "local",
      "command": ["docker", "mcp", "gateway", "run"],
      "enabled": false,
      "environment": {
        "MCP_GITHUB_OAUTH": "true"
      }
    },
    "git-context": {
      "type": "remote",
      "url": "https://gitmcp.io/heyhuynhgiabuu/dotfiles"
    }
  }
}
